
@model CurrencyTrader.Web.ViewModels.Silver.IndexViewModel
@{
    this.ViewData["Title"] = "All Silvers";
}

<!DOCTYPE html>
<html>
<body>
    <div class="table-hover">
        <style>
            .table tbody tr:hover td, .table tbody tr:hover th {
                background-color: aqua
            }
        </style>
        <hr />
        <hr />
        <table cellpadding="0" cellspacing="0" class="table">
            <colgroup>
                <col width="80">
                <col width="600">
                <col width="80">
                <col width="110">
            </colgroup>

            <thead class="thead-dark">
                <tr class="header_cells">
                    <th class="first"></th>
                    <th>Наименование</th>
                    <th>Купува</th>
                    <th>Продава</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var silver in Model.Silvers)
                {
                    <tr class="first">
                        <td class="center"><img src=@silver.ImageUrl sizes="353px" /></td>
                        <td class="align-self-lg-center">@silver.Name</td>
                        <td class="center"><button type="button" class="btn btn-primary">@silver.BuyForPrice лв.</button></td>
                        <td class="center"><button type="button" class="btn btn-warning">@silver.SellForPrice лв.</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

